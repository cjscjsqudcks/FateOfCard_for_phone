<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="@drawable/play_bgtop"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="62dp"
                android:layout_height="88dp"
                android:background="@drawable/card_back"
                android:gravity="center"
                android:id="@+id/player1"
                android:layout_gravity="top|center"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/cardnum1"
                    android:fontFamily="@font/scdream"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_login"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/player1"
                android:id="@+id/forcards"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:visibility="invisible"
                android:scaleType="fitXY"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false"
            android:gravity="center"
            android:layout_weight="0.55"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="62dp"
                android:layout_height="88dp"
                android:background="@drawable/card_back"
                android:gravity="center"
                android:id="@+id/player2"
                android:layout_marginRight="30dp"
                android:visibility="invisible"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/cardnum2"
                    android:fontFamily="@font/blackhansans"/>
            </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/card_heart1"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/card"/>
        <ImageButton
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/card_back"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/cardraw"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="62dp"
                android:layout_height="88dp"
                android:background="@drawable/card_back"
                android:gravity="center"
                android:id="@+id/player3"
                android:layout_marginLeft="30dp"
                android:visibility="invisible"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/cardnum3"
                    android:fontFamily="@font/blackhansans"/>
            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="bottom"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="bottom"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="23dp"
                    android:layout_marginBottom="5dp"
                    >
                    <ImageButton
                        android:layout_marginRight="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:id="@+id/activity_play_startitem"
                        android:background="@android:color/transparent"
                        android:src="@drawable/item_none"/>
                    <ImageButton
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:id="@+id/activity_play_gameitem"
                        android:background="@android:color/transparent"
                        android:src="@drawable/item_none"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:gravity="right|bottom">
                    <TextView
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/turnname"
                        android:text="@string/turnname"
                        android:fontFamily="@font/blackhansans"

                        android:textSize="18dp"/>
                    <TextView
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stacking"
                        android:text="@string/stackcard"
                        android:fontFamily="@font/blackhansans"

                        android:textSize="18dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/play_bgbottom"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/carddeck"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/play_deck"
                android:scrollbars="horizontal"

                >

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>